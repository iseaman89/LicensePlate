@page "/license-plates/create/"
@attribute [Authorize(Roles = Roles.Administartor)]

<h3>Create new License Plate</h3>

<EditForm Model="_licensePlates" OnValidSubmit="HandleCreateLicensePlate">
    <DataAnnotationsValidator/>
    <ValidationSummary/>
    <div class="form-group">
        <label>Plate Number</label>
        <InputText class="form-control" @bind-Value="_licensePlates.PlateNumber"></InputText>
        <ValidationMessage For="@(() => _licensePlates.PlateNumber)"></ValidationMessage>
    </div>
    <div class="form-group">
        <label>Image</label>
        <InputText class="form-control" @bind-Value="_licensePlates.Image"></InputText>
        <ValidationMessage For="@(() => _licensePlates.Image)"></ValidationMessage>
    </div>
    <button type="submit" class="btn btn-primary"><span class="oi oi-pencil"></span>Create</button>
    <button @onclick="BackToList" class="btn btn-outline-secondary"><span class="oi oi-media-skip-backward"></span>Back To List</button>
</EditForm>